/* pages/route/route.wxss */
.map_container{
  position: absolute;
  top: 0;
  bottom: 110px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.search{
  height: 35px;
  width: 100%;
}
.search input{
  width:90%;
  margin:0px auto;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 20px;
}
text{
  margin: 0px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 13px 0 6px 0;
  font-size:15px;
}
.ranking{
  position:absolute;
  bottom: 40px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #DB3E2D;
  width:70px;
  text-align:center;
  border-radius:5px;
}